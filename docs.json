{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Nevua Markets",
  "logo": {
      "light": "/logo/nevua-markets-logo-400-150.svg",
      "dark": "/logo/nevua-markets-logo-400-150-dark.svg"
  },
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "User Guide",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "introduction/what-is-nevua-markets",
              "introduction/how-to-sign-up"
            ]
          },
          {
            "group": "Watchlists",
            "pages": [
              "watchlists/create-a-watchlist"
            ]
          },
          {
            "group": "Alerts",
            "pages": [
              
              "alerts/create-a-price-alert",
              "alerts/create-a-market-status-alert",
              "alerts/conditions",
              "alerts/trigger-frequency",
              {
                "group": "Notification Channels",
                "expanded": true,
                "pages": [
                  "alerts/notification-channels/in-app",
                  "alerts/notification-channels/telegram",
                  "alerts/notification-channels/discord",
                  "alerts/notification-channels/webhook"
                ]
              },
              "alerts/alert-management"
            ]
          }
        ]
      },
      {
        "tab": "Developer API",
        "groups": [
          {
            "group": "API Documentation",
            "openapi": {
              "directory": "api-reference",
              "source": "openapi.json"
            },
            "pages": [
              {
                "group": "Introduction",
                "expanded": true,
                "pages": [
                  "api-reference/authentication"
                ]
              },
              {
                "group": "Search",
                "expanded": true,
                "pages": [
                  "POST /search",
                  "POST /search/tag-slugs"
                ]
              },
              {
                "group": "Alerts",
                "expanded": true,
                "pages": [
                  "POST /subscriptions/{watchlistId}",
                  "GET /subscriptions/{watchlistId}",
                  "POST /subscriptions/delete",
                  "api-reference/alert-webhooks/webhook-payloads"

                ]
              },
              {
                "group": "Watchlists",
                "expanded": true,
                "pages": [
                  "POST /watchlists/create-from-tags",
                  "PATCH /watchlists/{watchlistId}/query/tags",
                  "GET /watchlists/{watchlistId}",
                  "POST /watchlists/delete"
                ]
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Nevua Markets",
          "href": "https://nevua.markets",
          "icon": "house"
        },
        {
          "anchor": "Twitter",
          "href": "https://x.com/NevuaMarkets",
          "icon": "twitter"
        }
      ]
    }
  },
  "api": {
    "openapi": "openapi.json"
  }
}